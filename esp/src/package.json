{
  "name": "eclwatch",
  "version": "10.0.0",
  "description": "ECL Watch Mono Repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "uninstall-root": "rimraf ./node_modules",
    "uninstall-workspace": "lerna exec -- rimraf ./node_modules",
    "uninstall": "run-s uninstall-workspace uninstall-root",
    "clean-root": "rimraf ./build ./lib ./types",
    "clean-workspace": "lerna run clean",
    "clean": "run-p clean-root clean-workspace",
    "lint": "lerna run lint",
    "compile-watch": "lerna run compile-watch",
    "bundle-watch": "lerna run bundle-watch",
    "build": "lerna run build",
    "serve": "ws",
    "serve-verbose": "ws --verbose.include request response",
    "test": "lerna run test"
  },
  "main": "src/stub.js",
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "eslint": "9.20.0",
    "eslint-plugin-eclwatch": "file:./eslint",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "lerna": "8.1.8",
    "local-web-server": "5.3.1",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.5",
    "tslib": "2.8.1",
    "typescript": "5.4.3",
    "typescript-eslint": "8.24.0"
  },
  "author": "HPCC Systems",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hpcc-systems/HPCC-Platform"
  }
}