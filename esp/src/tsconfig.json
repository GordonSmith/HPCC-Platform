{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "declarationDir": "./types",
        "target": "ES5",
        "module": "AMD",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "skipLibCheck": true,
        "ignoreDeprecations": "5.0",
        "downlevelIteration": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "typeRoots": [],
        "types": [],
        "paths": {
            "@hpcc-js/wasm-*": [
                "./node_modules/@hpcc-js/wasm-*",
                "../../../hpcc-js-wasm/packages/*"
            ],
            "@hpcc-js/*": [
                "./node_modules/@hpcc-js/*",
                "../../../Visualization/packages/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src-react/components/About.tsx",
        "src-react/components/controls/ComingSoon.tsx",
        "src-react/hooks/platform.tsx",
    ],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "excludeDirectories": [
            "**/node_modules"
        ],
    }
}